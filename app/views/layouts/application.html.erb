<!DOCTYPE html>
<html>
  <head>
    <title>TheGossipProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>




  <!-------------------------- NAV BAR -------------------------->




  <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" <%= link_to 'The Gossip Project', index_path %> </a>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
      <a class="nav-link"<%= link_to 'Accueil', index_path %>  </a>
      </li>
      <li class="nav-item">
      <a class="nav-link"<%= link_to 'Team', team_path %> </a>
      </li>
      <li class="nav-item">
      <a class="nav-link" <%= link_to 'Contact', contact_path %> </a>
      </ul>
      
      <ul class="navbar-nav my-2 my-lg-0">
        <% if !current_user%> 
      <li class="nav-item">
      <button class="btn btn-light" role="button" aria-pressed="true"><%=link_to 'CONNEXION', new_session_path %></button>
      </li>
      <a class="nav-link" <%= link_to 'S\'inscrire', new_user_path %> </a>
      </li>

      <% else %>
      <li class="nav-item">
      <a class="nav-link btn" <%= link_to 'Mon compte', user_path(current_user.id) %></a>
      </li>
      <li class="nav-item">
      <a class="nav-link btn btn-danger" <%= link_to 'Se déconnecter', session_path(session[:user_id]), method: :delete, data: {confirm: 'Êtes-vous sûr de vous déconnecter ?'} %> </a>
      </li>
       <% end %>
      </ul>

      

      </ul>
  </div>

  </nav>



  <%= yield %>
  </body>
</html>
